

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title></title>
</head>
<body>
    <div ng-if="isSelected(3)" ng-controller="AddController">
        <h2>Communication Details</h2>

        <form>

            <div class="form-group">
                <label for="caddress">Current Address: </label>
                <textarea name="body" class="form-control" required minlength="10"
                          cols="20" rows="10" ng-model="caddress"></textarea>
            </div>

            <div class="form-group">
                <label for="paddress">Permanent Address: </label>
                <textarea name="body" class="form-control" required minlength="10"
                          cols="20" rows="10" ng-model="paddress"></textarea>
            </div>



            <button class="btn btn-primary" ng-click="savecommunication()">
                Save
            </button>


        </form>
        <button type="submit" class="btn  btn-warning btn-block" ng-click="saveemployee()">Submit</button>
    </div>
</body>
</html>